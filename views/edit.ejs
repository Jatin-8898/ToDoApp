<% include ../views/partials/header %>


<div class="row mt-4">
    <div class="col-md-6">
        <form action="/todo/edit/<%= todo._id %>" method="post">
            <div class="form-group"> 
                <label for="">Todo Name</label>
                <input type="text" class="form-control" name="text" id="" placeholder="Add Todo" value="<%= todo.text %>">
            </div>
        
            <div class="form-group">
                <label for="">Todo Body</label>
                <textarea name="body" id="" class="form-control" placeholder="Add Body"><%= todo.body %></textarea>
            </div>
            <br>

            <button type="submit" class="btn btn-info">Submit</button> 
            <a href="/" class="btn btn-danger">Cancel</a>
        </form>
    </div>
</div>







<% include ../views/partials/footer %>